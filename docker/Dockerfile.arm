#https://catalog.ngc.nvidia.com/containers?filters=&orderBy=scoreDESC&query=jetson
FROM nvcr.io/nvidia/l4t-jetpack:r36.4.0
ENV DOCKERFILE="arm"
ENV RECIPE="test"
ENV PYTHON_VERSION=3.10
COPY --from=ghcr.io/astral-sh/uv:0.5.1 /uv /uvx /bin/
# RUN apt-get update && \
#     apt-get install -y \
WORKDIR /
RUN git clone https://github.com/hu-po/warp-ik.git
WORKDIR /warp-ik
ENV UV_LINK_MODE=copy
ENV UV_PROJECT_ENVIRONMENT=/.venv
COPY ./pyproject.toml /pyproject.toml
RUN uv venv --python $PYTHON_VERSION $UV_PROJECT_ENVIRONMENT
RUN uv pip install -e .
RUN uv run python src/device_properties.py